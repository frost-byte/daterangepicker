{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "moduleResolution": "node",
        "module": "ESNext",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES2015",
        "importHelpers": true,
        "lib": [
            "dom",
            "es2016",
            "es2017",
        ],
        "types": [],
    },
    "include": [
        "src/**/*"
    ]
}
