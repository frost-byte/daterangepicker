{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/wp",
        "baseUrl": "../",
        "sourceMap": true,
        "listFiles": true,
        "declaration": false,
        "importHelpers": true,
        "module": "esnext",
        "moduleResolution": "node",
        "traceResolution": true,
        "noImplicitAny": false,
        "typeRoots": [
            "node_modules/@types",
            "node_modules/moment",
            "node_modules/knockout",
            "node_modules/knockout-daterangepicker-fb"
        ],
        "types": [
            "moment",
            "knockout-daterangepicker-fb",
            "knockout"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "./src/test.ts",
        "**/*.component.spec.ts",
        "**/*.e2e.ts"
    ]
}
