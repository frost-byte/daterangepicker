{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "sourceMap": true,
        "listFiles": false,
        "moduleResolution": "node",
        "traceResolution": false,
        "types": [
            "mocha",
            "chai",
            "knockout-daterangepicker-fb"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ],
        "skipLibCheck": true
    },
    "include": [
        "../src/**/*.ts"
    ],
    "exclude": [
        "src/test.ts",
        "**/*.spec.ts",
        "**/node_modules",
        "**/.*/"
    ]
}
